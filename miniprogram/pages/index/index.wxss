/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f7fa;
}

.weather-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
}

/* 城市选择栏 */
.city-bar {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: linear-gradient(to right, #4a90e2, #63b8ff);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.city-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
  margin-right: 10rpx;
}

.location-icon {
  font-size: 28rpx;
  color: #ffffff;
}

/* 授权提示 */
.auth-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.auth-tip {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading-icon {
  font-size: 48rpx;
  color: #4a90e2;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 天气内容区域 */
.weather-content {
  flex: 1;
  padding: 0 30rpx 30rpx;
}

/* 今日天气卡片 */
.today-card {
  margin-bottom: 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.today-weather {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
}

.weather-icon-large {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
}

.weather-icon-large image {
  width: 100%;
  height: 100%;
}

.today-info {
  flex: 1;
}

.weather-desc {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}

.temp-range {
  font-size: 48rpx;
  font-weight: 600;
  color: #4a90e2;
  margin-bottom: 10rpx;
}

.update-time {
  font-size: 24rpx;
  color: #999999;
}

/* 预报部分 */
.forecast-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.forecast-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 预报网格样式 - 已弃用，使用下方列表视图样式 */
/* 保留此注释作为历史记录 */

/* 预报列表样式 - 列表视图 */
.forecast-list {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.forecast-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.forecast-item:last-child {
  border-bottom: none;
}

.forecast-date {
  width: 100rpx;
  font-size: 28rpx;
  color: #333333;
}

.forecast-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 30rpx;
}

.forecast-weather {
  flex: 1;
  font-size: 28rpx;
  color: #666666;
}

.forecast-temp {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}


.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
