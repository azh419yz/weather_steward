/* 城市选择页面样式 */
.city-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f7fa;
}

.city-header {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: linear-gradient(to right, #4a90e2, #63b8ff);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.back-icon {
  margin-right: 20rpx;
}

.icon-back {
  font-size: 36rpx;
  color: #ffffff;
}

.header-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
}

.city-content {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

/* 当前选择的城市 */
.selected-city {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.city-label {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.city-value {
  font-size: 48rpx;
  font-weight: 500;
  color: #333333;
}

/* 最近使用的城市 */
.recent-cities {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.recent-title {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

.recent-list {
  display: flex;
  flex-wrap: wrap;
}

.recent-item {
  padding: 16rpx 30rpx;
  background-color: #f0f6ff;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #4a90e2;
}

/* 选择城市部分 */
.select-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.select-tip {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
  text-align: center;
}